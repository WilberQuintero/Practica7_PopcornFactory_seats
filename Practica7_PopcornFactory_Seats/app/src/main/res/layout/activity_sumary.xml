<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Sumary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mustard"
        android:text="Sumary: "
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="45sp"/>

    <View
        android:layout_width="380dp"
        android:layout_height="6dp"
        android:layout_marginTop="33dp"
        android:layout_gravity="center"
        android:background="@color/mustard" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sumary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mustard"
            android:text="Movie: "
            android:textAllCaps="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/sumary_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sumary_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Seat number: "
            android:textAllCaps="true"
            android:textColor="@color/mustard"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sumary_seat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sumary_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mustard"
            android:text="Customer: "
            android:textAllCaps="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/sumary_cliente_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Wilberson"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sumary_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Pay: "
            android:textAllCaps="true"
            android:textColor="@color/mustard"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="85dp"
            android:orientation="horizontal"
            android:paddingHorizontal="0dp">


            <RadioButton
                android:layout_width="87dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:background="@drawable/radio_selectable"
                android:text="Cash"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/pagoCash"
                android:textStyle="bold" />

            <RadioButton
                android:layout_width="87dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:background="@drawable/radio_selectable"
                android:text="Card"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/pagoCard"
                android:textStyle="bold" />

        </RadioGroup>


    </LinearLayout>


    <View
        android:layout_width="380dp"
        android:layout_height="6dp"
        android:layout_marginTop="33dp"
        android:layout_gravity="center"
        android:background="@color/mustard" />



    <Button
        android:id="@+id/confirm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:textColor="@color/black"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:text="Confirm" />





</LinearLayout>